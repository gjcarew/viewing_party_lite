<main class="form-signin w-50 m-auto">
  <center><h1 class="display-5 fw-bold">Log In</h1></center>
  <%= form_with url: login_path, method: :post, scope: :session, local: true, class: "form-control" do |f| %>
    <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, {class: "form-control input-sm", id: "floatingInput", placeholder:"name@example.com"} %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, { class: "form-control input-sm", id: "floatingInput", placeholder: "Password" } %>
        </div>
      </div>
    </div>
    <div class="col-md-4 offset-4">
      <%= f.submit "Log In", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>
</main>